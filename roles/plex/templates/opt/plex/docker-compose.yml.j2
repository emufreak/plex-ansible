---
services:
  plex:
    image: lscr.io/linuxserver/plex:latest
    container_name: plex
    ports:
      - 32400:32400
    environment:
      - PUID={{ plex_user_id }}
      - PGID={{ plex_group_id }}
      - TZ={{ plex_timezone }}
      - VERSION={{ plex_version }}
    volumes:
      - /opt/plex/plex/config:/config
{% for item in media_subfolders %}
      - {{ media_mountpoint }}/{{ item }}:/{{ item }}
{% endfor %}
    restart: unless-stopped
    networks:
      - plex_network

  sonarr:
    image: lscr.io/linuxserver/sonarr:latest
    container_name: sonarr
    environment:
      - PUID={{ plex_user_id }}
      - PGID={{ plex_group_id }}
      - TZ={{ plex_timezone }}
    volumes:
      - {{ sonarr_base_dir }}/config:/config
      - {{ media_mountpoint }}/tv:/tv
      - {{ media_mountpoint }}/downloads:/downloads
    ports:
      - 8989:8989
    restart: unless-stopped
    networks:
      - plex_network

  prowlarr:
    image: {{ prowlarr_image }}
    container_name: prowlarr
    environment:
      - PUID={{ plex_user_id }}
      - PGID={{ plex_group_id }}
      - TZ={{ plex_timezone }}
    volumes:
      - {{ prowlarr_base_dir }}/config:/config
    ports:
      - {{ prowlarr_port }}:9696
    restart: unless-stopped
    networks:
      - plex_network

  gluetun:
    image: {{ gluetun_image }}
    container_name: gluetun
    environment:
      - VPN_SERVICE_PROVIDER={{ gluetun_vpn_service_provider }}
      - VPN_TYPE={{ gluetun_vpn_type }}
      - OPENVPN_USER={{ gluetun_username }}
      - OPENVPN_PASSWORD={{ gluetun_password }}
      - SERVER_TIERS={{ gluetun_tier }}
      - OPENVPN_PROTOCOL={{ gluetun_protocol }}
      - HTTPPROXY={{ gluetun_http_proxy_enabled }}
      - HTTPPROXY_LISTENING_ADDRESS=0.0.0.0:{{ gluetun_http_proxy_port }}
{% if gluetun_server_countries %}
      - SERVER_COUNTRIES={{ gluetun_server_countries }}
{% endif %}
    volumes:
      - {{ gluetun_base_dir }}/config:/gluetun
      - /etc/localtime:/etc/localtime:ro
    ports:
      - {{ gluetun_http_proxy_port }}:{{ gluetun_http_proxy_port }}
    devices:
      - /dev/net/tun
    cap_add:
      - NET_ADMIN
    restart: unless-stopped
    networks:
      - plex_network

  qbittorrent:
    image: {{ qbittorrent_image }}
    container_name: qbittorrent
    privileged: true
    environment:
      - PUID={{ plex_user_id }}
      - PGID={{ plex_group_id }}
      - TZ={{ plex_timezone }}
      - WEBUI_PORT={{ qbittorrent_webui_port }}
      - TORRENTING_PORT={{ qbittorrent_torrent_port }}
    volumes:
      - {{ qbittorrent_base_dir }}/config:/config
      - {{ media_mountpoint }}/downloads:/downloads
    ports:
      - {{ qbittorrent_webui_port }}:{{ qbittorrent_webui_port }}
      - {{ qbittorrent_torrent_port }}:{{ qbittorrent_torrent_port }}
      - {{ qbittorrent_torrent_port }}:{{ qbittorrent_torrent_port }}/udp
    restart: unless-stopped
    networks:
      - plex_network

  youtarr-db:
    image: mariadb:10.3
    container_name: youtarr-db
    restart: unless-stopped
    environment:
      MYSQL_ROOT_PASSWORD: "{{ youtarr_db_root_password }}"
      MYSQL_DATABASE: "{{ youtarr_db_name }}"
      MYSQL_TCP_PORT: "3221"
      MYSQL_CHARSET: utf8mb4
      MYSQL_COLLATION: utf8mb4_unicode_ci
    ports:
      - "{{ youtarr_db_port }}:{{ youtarr_db_port }}"
    volumes:
      - {{ youtarr_base_dir }}/database:/var/lib/mysql
    command: >-
      --port={{ youtarr_db_port }}
      --character-set-server=utf8mb4
      --collation-server=utf8mb4_unicode_ci
      --innodb-file-per-table=1
      --innodb-large-prefix=ON
    healthcheck:
      test: ["CMD", "mysqladmin", "ping", "-h", "localhost", "-P", "{{ youtarr_db_port }}", "-u", "root", "-p{{ youtarr_db_root_password }}"]
      interval: 10s
      timeout: 5s
      retries: 5
      start_period: 30s
    networks:
      - plex_network

  youtarr:
    image: {{ youtarr_image }}
    container_name: youtarr
    restart: unless-stopped
    user: "{{ youtarr_uid }}:{{ youtarr_gid }}"
    depends_on:
      youtarr-db:
        condition: service_healthy
    environment:
      IN_DOCKER_CONTAINER: 1
      TZ: "{{ youtarr_timezone }}"
      DB_HOST: youtarr-db
      DB_PORT: "{{ youtarr_db_port }}"
      DB_USER: root
      DB_PASSWORD: "{{ youtarr_db_root_password }}"
      DB_NAME: "{{ youtarr_db_name }}"
      AUTH_ENABLED: "{{ youtarr_auth_enabled }}"
      AUTH_PRESET_USERNAME: "{{ youtarr_auth_preset_username }}"
      AUTH_PRESET_PASSWORD: "{{ youtarr_auth_preset_password }}"
      LOG_LEVEL: "{{ youtarr_log_level }}"
      YOUTUBE_OUTPUT_DIR: "{{ youtarr_youtube_output_dir }}"
    ports:
      - "3087:3011"
    volumes:
      - {{ youtarr_youtube_output_dir }}:/usr/src/app/data
      - {{ youtarr_base_dir }}/server/images:/app/server/images
      - {{ youtarr_base_dir }}/config:/app/config
      - {{ youtarr_base_dir }}/jobs:/app/jobs
    healthcheck:
      test: ["CMD", "curl", "--fail", "--silent", "--show-error", "--output", "/dev/null", "http://localhost:3011/api/health"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s
    networks:
      - plex_network

networks:
  plex_network:
    name: plex_network
