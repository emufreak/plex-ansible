---
services:
  plex:
    image: lscr.io/linuxserver/plex:latest
    container_name: plex
    network_mode: host
    environment:
      - PUID={{ plex_user_id }}
      - PGID={{ plex_group_id }}
      - TZ={{ plex_timezone }}
      - VERSION={{ plex_version }}
    volumes:
      - /opt/plex/config:/config
      - {{ media_mountpoint }}:/data/movies
    restart: unless-stopped
